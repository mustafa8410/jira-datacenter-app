## templates/user-action-result.vm

<html>
<head>
    <meta charset="UTF-8">
    <title>User Admin Action Result</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-dark">
            <h4 class="mb-0">User Action Performed</h4>
        </div>
        <div class="card-body">
            <p>
                <strong>Action:</strong>
                #if($action == "deactivate")
                    <span class="badge bg-warning text-dark">Deactivated</span>
                #elseif($action == "remove-group")
                    <span class="badge bg-danger">License Revoked</span>
                #else
                    <span class="badge bg-secondary">$action</span>
                #end
                <br>
                <strong>User:</strong>
                <span class="badge bg-primary">$user.displayName</span>
                <span class="text-muted">($user.username)</span>
            </p>
            <div class="alert alert-success">Action <strong>$action</strong> performed successfully on <strong>$user.displayName</strong>.</div>
            <a href="$contextPath/plugins/servlet/my-plugin-user-detail?username=$user.username" class="btn btn-outline-primary me-2">Back to User</a>
            <a href="$contextPath/plugins/servlet/my-plugin-dashboard" class="btn btn-primary">Back to Dashboard</a>
        </div>
    </div>
</div>
</body>
</html>
