## templates/bulk-action-result.vm

<html>
<head>
    <meta charset="UTF-8">
    <title>Bulk Action Result</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Bulk Action Result</h4>
        </div>
        <div class="card-body">
            <p>
                <strong>Action:</strong>
                #if($action == "deactivate") <span class="badge bg-warning text-dark">Deactivated</span>
                #elseif($action == "remove-group") <span class="badge bg-danger">License Revoked</span>
                #else <span class="badge bg-secondary">$action</span>
                #end
                <br/>
                <strong>Users affected:</strong> <span class="badge bg-success">$users.size()</span>
            </p>
            <ul class="list-group mb-3">
                #foreach($user in $users)
                    <li class="list-group-item">$user.displayName <span class="text-muted">($user.username)</span></li>
                #end
            </ul>
            <a href="/jira/plugins/servlet/my-plugin-dashboard" class="btn btn-primary">Back to Dashboard</a>
        </div>
    </div>
</div>
</body>
</html>
