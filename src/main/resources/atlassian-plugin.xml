              weight="1">
        <label key="plugin.license.hygiene.sidebar.link"/>
        <link>/plugins/servlet/my-plugin-dashboard</link>
    </web-item>

    <!-- Users (Admin) sol menüsüne "Inactive User Auditor" linki -->
    <web-item key="iua-users-menu-link"
            section="system.admin.top.navigation.bar/admin_users_menu"
            weight="999">
        <!-- i18n kullanıyorsan sadece key yaz: -->
        <label key="plugin.license.hygiene.sidebar.link"/>
        <!-- i18n dosyan yoksa şimdilik düz metin de olur:
        <label>Inactive User Auditor</label>
        -->
