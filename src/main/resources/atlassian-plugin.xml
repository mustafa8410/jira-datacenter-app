        <!-- NEW: open in new tab -->
        <param name="target">_blank</param>
        <param name="rel">noopener noreferrer</param>
    </web-item>



    <!-- Add a servlet to handle requests -->
    <servlet name="My Plugin Dashboard" key="my-plugin-dashboard-servlet" class="com.example.jira.helloworld.servlet.MyPluginDashboardServlet">
        <url-pattern>/my-plugin-dashboard</url-pattern>
    </servlet>

    <servlet name="My Plugin User Detail" key="my-plugin-user-detail-servlet" class="com.example.jira.helloworld.servlet.MyPluginUserDetailServlet">
        <url-pattern>/my-plugin-user-detail</url-pattern>
    </servlet>

    <servlet name="Bulk Action Servlet" key="bulk-action-servlet" class="com.example.jira.helloworld.servlet.BulkActionServlet">
        <url-pattern>/bulk-action</url-pattern>
    </servlet>

    <servlet name="User Admin Action" key="my-plugin-user-action-servlet" class="com.example.jira.helloworld.servlet.MyPluginUserActionServlet">
        <url-pattern>/my-plugin-user-action</url-pattern>
    </servlet>

    <servlet name="Revoke Inactive 90 Servlet" key="revoke-inactive-90-servlet" class="com.example.jira.helloworld.servlet.RevokeInactive90Servlet">
        <url-pattern>/revoke-inactive-90</url-pattern>
    </servlet>

    <servlet name="Group Search Servlet" key="group-search-servlet" class="com.example.jira.helloworld.servlet.GroupSearchServlet">
        <url-pattern>/group-search</url-pattern>
    </servlet>











